{
  "compilerOptions": {
    "target": "ES2020",                   /* Modern JS output */
    "module": "CommonJS",                 /* Node’s module system */
    "rootDir": "src",                     /* Your TS source files */
    "outDir": "dist",                     /* Where compiled JS goes */
    "strict": true,                       /* Enable all strict checks */
    "esModuleInterop": true,              /* Allow default imports from CJS modules */
    "moduleResolution": "node",           /* How modules get found */
    "resolveJsonModule": true,            /* Import .json files */
    "skipLibCheck": true,                 /* Skip type checks on node_modules */
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  },
  "include": ["src"],                     /* Only compile files under src */
  "exclude": ["node_modules", "dist"]     /* Don’t compile these */
}
